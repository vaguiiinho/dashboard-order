generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Usuario {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  senha     String
  grupoId   Int
  grupo     Grupo    @relation(fields: [grupoId], references: [id])
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("usuarios")
}

model Grupo {
  id        Int       @id @default(autoincrement())
  nome      String    @unique // Ex: "gerente", "supervisor", "colaborador"
  descricao String?   // Descrição opcional do grupo
  ativo     Boolean   @default(true) // Status ativo/inativo do grupo
  usuarios  Usuario[]
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt

  @@map("grupos")
}
